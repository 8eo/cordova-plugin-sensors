<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="br.com.fabiorogeriosj.cordova.sensors"
    version="0.0.1">
    <name>Sensors</name>
    <description>Cordova Sensors Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,sensors</keywords>
    <repo>https://github.com/fabiorogeriosj/cordova-plugin-sensors.git</repo>
    <issue>https://github.com/fabiorogeriosj/cordova-plugin-sensors/issues</issue>

    <js-module src="www/sensors.js" name="sensors">
        <clobbers target="sensors" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AndroidSensors" >
                <param name="android-package" value="br.com.fabiorogeriosj.cordova.sensors.AndroidSensors"/>
            </feature>
        </config-file>
        <source-file src="src/android/AndroidSensors.java" target-dir="src/br/com/fabiorogeriosj/cordova/sensors" />
    </platform>
</plugin>